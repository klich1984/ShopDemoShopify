<div class="w-full py-6-px3">
	<div class="border bg-white shadow-lg rounded-lg overflow-hidden">
		<a href="{{ var_product.url }}">
			{%- comment -%}Si hay una imagen destacada dentro del producto{%- endcomment -%}
			{%- if var_product.featured_image -%}
			<div class="h-80 overflow-hidden">
				<img src="{{ var_product.featured_image | img_url: 'medium' }}" alt="{{ var_product.featured_img.alt }}" class="w-full h-full object-cover">
			</div>
			{%- else -%}
				{{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
			{%- endif -%}
		</a>
		<div class="flex flex-col p-4">
			<p>{{ var_product.vendor }}</p>
			<a href="{{ var_product.url }}">{{ var_product.title }}</a>
			<p>{{ var_product.price | money_without_trailing_zeros }}</p>
		</div>
	</div>
</div>
