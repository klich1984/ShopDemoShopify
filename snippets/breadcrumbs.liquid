{%- unless template == 'index' or template == 'cart' -%}
  <a href="/" title="{{ 'general.breadcrumbs.home_link_title' | t }}">Inicio</a>
  {% for link in linklists.main-menu.links %}
    {% if link.child_active or link.active %}
    /
      <a href="{{ link.url }}">
      {{ link.title | escape }}
      </a>
      {% for clink in link.links %}
        {% if clink.child_active or clink.active %}
        /
          <a href="{{ clink.url }}">
          {{ clink.title | escape }}
          </a>
          {% for gclink in clink.links %}
            {% if gclink.child_active or gclink.active %}
              /
              <a href="{{ gclink.url }}">
              {{ gclink.title | escape }}
              </a>
            {% endif %}
          {%- endfor -%}
        {% endif %}
      {%- endfor -%}
    {% endif %}
  {%- endfor -%}
{%- endunless -%}
