<!DOCTYPE html>
<html>
	<head>
		<title>{{ page_title }}</title>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="description" content="{{ page_description | escape }}" />
		<link rel="canonical" href="{{ canonical_url }}" />
		<meta
			name="viewport"
			content="width=device-width,initial-scale=1,shrink-to-fit=no"
		/>
		{{
			content_for_header
		}}
		<!-- Header hook for plugins -->
		<!-- font-family-poppins -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
			rel="stylesheet"
		/>
		<!-- Tailwind -->
		{{ 'application.css' | asset_url | stylesheet_tag }}
		<!-- Hero -->
		{{ 'hero.css' | asset_url | stylesheet_tag }}

		{{ 'main.css' | asset_url | stylesheet_tag }}
	</head>
	<body>
		{% section 'announcement-text' %}
		{% section 'header' %}
		
		<main role="main">
			{{ content_for_layout }}
		</main>
		{% section 'footer' %}
		{{ 'application.js' | asset_url | script_tag }}
	</body>
</html>
