{% schema %}

{
  "name": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Inserta logo"
    }, {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 2,
      "default": 102,
      "label": "Tamaño de la imagen"
    }, {
      "type": "link_list",
      "id": "menu",
      "label": "Menu de Navegacion",
      "default": "main-menu"
    }
  ]
}

{% endschema %}
