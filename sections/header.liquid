<div class="modal-movil md:hidden">
  <section class="modal-movil-top">
    <div class="logo">{% render 'icon-logo-blue' %}</div>
    <button class="btn-close">{% render 'icon-close' %}</button>
  </section>
	<!-- medium menu nav -->
  <section class="modal-movil-medium">
    <nav class="menu">
			<ul class="menu-drawer__menu list-menu" role="list">
				{%- for link in section.settings.menu.links -%}
					<li class="menu-link-parent">
						{%- if link.links != blank -%}
						<details
							class="submenu-parent"
							menu="item-{{forloop.index}}"
							id="Details-menu-drawer-menu-item-{{ forloop.index }}">
							<summary class="summary-link">
								{{ link.title | escape }}
								{% render 'icon-angle-right' %}
							</summary>
						</details>
						<div class="submenu">
							<div class="top-submenu">
								<div class="top-submenu-left">
									<button class="close-to-back">
										{% render 'icon-arrow-left' %}
									</button>
									{{ link.title }}
								</div>
								<div class="top-submenu-right">
									<button class="btn-close-2">
										{% render 'icon-close' %}
									</button>
								</div>
							</div>
							<div class="dropdown inline-block relative w-full">
								<ul class="dropdown-menu relative text-gray-700 pt-1" role="list" tabindex="-1">
									{%- for childlink in link.links -%}
										<li class="">
											{%- if childlink.links == blank -%}
												<a href="{{ childlink.url }}" class="rounded-t hover:bg-gray-400 px-4 block whitespace-no-wrap">
													{{ childlink.title | escape }}
												</a>
											{%- else -%}
												<div class="dropdown2 inline-block relative w-full" id="childlink-{{ childlink.title | escape }}">
													<button
														aria-expanded="true"
														class="
															hover:bg-gray-400
															font-semibold
															px-4
															inline-flex
															justify-between
															items-center
															w-full">
														<span class="mr-1">
															{{ childlink.title | escape }}
														</span>
														{% render 'icon-angle-down' %}
													</button>
													<ul class="dropdown-menu2 relative hidden pt-1" role="list" tabindex="-1">
														{%- for grandchildlink in childlink.links -%}
															<li class="hover:bg-gray-400">
																<a href="{{ grandchildlink.url }}" class="hover:bg-gray-400 px-4 block whitespace-no-wrap">
																	{{ grandchildlink.title | escape }}
																</a>
															</li>
														{%- endfor -%}
													</ul>
												</div>
											{%- endif -%}
										</li>
									{%- endfor -%}
								</ul>
							</div>
						</div>
						{%- else -%}
							<a href="{{ link.url }}" class="rounded-b block whitespace-no-wrap">
								{{ link.title | escape }}
							</a>
						{%- endif -%}
					</li>
				{%- endfor -%}
			</ul>
	</nav>
  </section>
	<!-- Bottom icons social -->
  <section class="modal-movil-bottom">
    <div class="item-modal-botton">
